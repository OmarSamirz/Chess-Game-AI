<Window x:Class="Chess.Screens.GameBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.Screens"
        mc:Ignorable="d"
        Title="GameBoard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        >
    <Window.Background>
        <ImageBrush ImageSource="/Screens/ChessBoard - Background.png"/>
    </Window.Background>

    <Grid>
        <Frame 
            x:Name="Frame"
            NavigationUIVisibility="Hidden"
            Background="Transparent" 
                />
        <Grid>
            <!-- Slice Grid -->
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="Board" Source="/Images/BackGrounds/Background Board.png" 
                   Grid.RowSpan="2" 
                   Grid.ColumnSpan="3" 
                   Margin="-41,52,-44,-1"/>
            <Ellipse 
                x:Name="Circle" 
                Grid.Row="1" 
                Grid.Column="0"
                StrokeThickness="3"
                Width="100" Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,30,5,0"
                >
                <Ellipse.Stroke>
                    <SolidColorBrush Color="#29B6FF"/>
                </Ellipse.Stroke>
            </Ellipse>

            <Image Source="/Images/Icons/Pause.png"
                   Grid.Row="0"
                   Grid.Column="0"
                   Height="30"
                   Width="30"
                   Margin="11,10,159,60"
                   MouseDown="Image_MouseDown"
                   />
            
            <!--Top Middle-->
            <!-- Comment
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,15,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                >
                <TextBlock
                    Text="Move"
                    FontSize="20"
                    FontWeight="Medium"
                    Foreground="White"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    />
                <Border
                    BorderBrush="White"
                    BorderThickness="2"
                    CornerRadius="10"
                    Width="150"
                    Height="40"
                    >
                    <TextBlock
                        x:Name="PlayerNameTurn"
                        Text="Player1"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        />
                </Border>
                
            </StackPanel>
            -->
            <TextBlock
                x:Name="CheckType"
                Grid.Row="0"
                Grid.Column="1"
                FontSize="65"
                Foreground="White"
                FontFamily="Imperator"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                />


            <!--Left Corner-->
            <Grid Grid.Row="1" Grid.Column="0">
                <StackPanel Height="330" Width="200" Margin="0,20,0,100"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Image x:Name="PlayerOneImage"
                            Source="/Images/Icons/head2.png"
                           Height="70"/>
                    <TextBlock x:Name="PlayerOneName" 
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Margin="0,30,0,0"
                               Text="Player1"/>
                    <Border                        
                        Width="147"
                        Height="150"
                        Margin="0,20,0,0"
                        BorderThickness="3"
                        BorderBrush="White"
                        CornerRadius="7">
                        <WrapPanel
                            x:Name="PlayerOneWrapPanel"
                            Orientation="Horizontal"
                            />
                    </Border>
                    <TextBlock
                        Text="Eaten Pieces"
                        Margin="0,10, 0, 0"
                        FontSize="15"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        />
                    <!-- Comment
                    <Border
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="10"
                        Width="150"
                        Height="40"
                        Margin="0,20,0,0"
                    >
                        <TextBlock
                            x:Name="LeftTimer"
                            Text="Left Timer"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                        />
                    </Border>
                    -->
                </StackPanel>
                <Button
                    x:Name="NewGameButton"
                    Height="46"
                    Width="170"
                    Content="New Game"
                    FontSize="25"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,350,0,0"
                    Visibility="Hidden"
                    Style="{StaticResource Buttons}"
                    Click="NewGameButton_Click"/>
            </Grid>
            
            <!--Right Corner-->
            <Grid Grid.Row="1" Grid.Column="2">
                <StackPanel Height="330" Width="200" Margin="0,20,0,100"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
