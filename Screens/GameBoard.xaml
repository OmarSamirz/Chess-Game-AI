                    Width="170"
                    Content="Home"
                    FontSize="25"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,350,0,0"
                    Visibility="Hidden"
                    Style="{StaticResource Buttons}"
